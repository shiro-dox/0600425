print("сколько стоит 200 кирпичей")
f1 = open('data.txt', 'r', encoding="utf-8")
text1 = f1.read()
name1=200*int(text1)
print(name1)
print("сколько стоит 3 килограмма цемента?")
f2 = open('data1.txt', 'r', encoding="utf-8")
text2 = f2.read()
name2=3*int(text2)
print(name2)
f3 = open('data2.txt', 'r', encoding="utf-8")
text3 = f3.read()
print("сколько стоит 5 килограммов песка?")
name3=5*int(text3)
print(name3)
f1.close()
f2.close()
f3.close()
